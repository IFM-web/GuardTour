
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- partial -->
<div class="main-panel main-panel-one" style="width:100% !important">
    <div class="content-wrapper pt-0">
        <div class="row">
            <div class="col-sm-12">
                <div class="home-tab">
                    <div class="tab-content tab-content-basic pt-0">
                        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                            <div class="row">
                                <div class="col-lg-12 d-flex flex-column">
                                    <div class="row flex-grow">
                                        <div class="col-12 grid-margin stretch-card">
                                            <div class="card card-rounded">
                                                <div class="card-body">

                                                    <input type="hidden" id="flgmode" value="Add" />
                                                    <input type="hidden" id="txtHiddenId" value="0" />
                                                    <div class="d-sm-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h4 class="card-title card-title-dash">
                                                                <a href="~/Admin/DashboardLogin">Home</a> / <a href="#">
                                                                    Employee
                                                                </a>
                                                            </h4>
                                                            <a href="~/Admin/DashboardLogin" class="btn btn-success">
                                                                Back
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <br>
                                                    <div class="row" id="hidshowhead">

                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Employee Code</label>
                                                                <input type="text" id="EmployeeCode" oninput="validateInput(this)" name="Employee Code" class="form-control mandatory" />

                                                            </div>
                                                        </div>

                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Employee Name</label>
                                                                <input type="text" id="Employee" name="Employee Name" class="form-control mandatory" />

                                                            </div>
                                                        </div>

                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Gender</label>
                                                           
                                                                <select id="Gender" name="Gender Name" class="form-control mandatory">
                                                                    <option value="0">Select Gender</option>
                                                                    <option value="Male">Male</option>
                                                                    <option value="Female">Female</option>
                                                                </select>

                                                            </div>
                                                        </div>

                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>
                                                                    Designation
                                                                </label>
                                                                <input type="text" id="Designation" name="Designation Name" class="form-control mandatory" value="" />

                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Department</label>
                                                                <input type="text" id="Dept" name="Department Name" class="form-control mandatory" />

                                                            </div>
                                                        </div> 
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Password</label>
                                                                <input type="text" id="Password" name="Password" class="form-control mandatory" />

                                                            </div>
                                                        </div>

                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Date Of birth</label>
                                                                <input type="date" id="DOB" name="Date of Birth" class="form-control mandatory" />

                                                            </div>
                                                        </div>  
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Date Of Joining</label>
                                                                <input type="date" id="join" name="Date of Join" class="form-control mandatory" />

                                                            </div>
                                                        </div>
                                                       

                                                        <div class="col-md-1" style="    margin-top: 37px;">
                                                            <div class="form-group">
                                                                <label>Status</label>
                                                                <input type="checkbox" id="status" checked aria-label="Checkbox for following text input">

                                                            </div>
                                                        </div>

                                                        <div class="col-md-3" style="    margin-top: 37px;">
                                                            <button onclick="SAVEall()" id="submitbtn" class="btn btn-success">
                                                                Save
                                                            </button>
                                                            <button class="btn btn-success" onclick="window.location.reload();">View List</button>



                                                        </div>
                                                    </div> <div class="row" id="griddiv">
                                                        <div class="d-flex justify-content-between">
                                                            <input type="text" id="filterInput" style="height: 2.0rem !important" class="form-control typcn-input-checked-outline py-0 w-25" placeholder="Search here" />
                                                            <button class="btn btn-success float-end" id="addbutton" onclick="Hidegrid()">Add New</button>

                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="table-data">
                                                                <div id="printdiv"></div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- main-panel ends -->

<script src="~/js/Master/Employee.js" asp-append-version="true"></script>
<script src="~/js/InsAjax.js" asp-append-version="true"></script>
<script src="~/js/Master.js" asp-append-version="true"></script>


