@{
    ViewData["Title"] = "Dashboard Login";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
  

  /* .dashboard a:nth-of-type(odd) {
        background: #132d44;
        cursor: pointer;
        border-radius: 10px;
    }

    .dashboard a:nth-of-type(even) {
        background-color: #dc133f !important;
        border-radius:10px;
    } */


    .dashboard a:nth-child(8n+1),
    .dashboard a:nth-child(8n+3) {
        background: #132d44; /* gray */
        cursor: pointer;
        border-radius: 10px;
    }

    .dashboard a:nth-child(8n+2),
    .dashboard a:nth-child(8n+4) {
        background-color: #dc133f !important; /* red */
        cursor: pointer;
        border-radius: 10px;
    }

    /* Even rows (2, 4, 6, ...) - Red, Gray, Red, Gray */

    .dashboard a:nth-child(8n+5),
    .dashboard a:nth-child(8n+7) {
        background-color: #dc133f !important; /* red */
        cursor: pointer;
        border-radius: 10px;
    }

    .dashboard a:nth-child(8n+6),
    .dashboard a:nth-child(8n+8) {
        background: #132d44; /* gray */
        cursor: pointer;
        border-radius: 10px;
    }




    .col-md-4 {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        margin-bottom: 8px;
        display: block;
    }

    select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .dashboard {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
      
    }

    .dashboard-box {
        /* background: linear-gradient(135deg, #6a11cb, #2575fc); */
        border-radius: 10px;
        color: #fff;
        text-align: center;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height:100%;
    }

        .dashboard-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .dashboard-box i {
            font-size: 4.5rem !important;
            /* margin-bottom: 10px; */
            display: block;
        }

        .dashboard-box h3 {
            font-size: 1.2rem;
            margin: 0;
            padding: 10px 0;
        }

        .dashboard-box p {
            font-size: 1.5rem;
            margin: 0;
        }

    @@media (max-width: 768px) {
        .dashboard {
            grid-template-columns: repeat(2, 1fr);
        }
    }
  


    @@media (max-width: 480px) {
        .dashboard {
            grid-template-columns: 1fr;
        }
    }
</style>
<div class="main-panel main-panel-one" style="width:100% !important">
    <div class="content-wrapper pt-0">
        <div class="row">
            <div class="col-sm-12">
                <div class="home-tab">
                    <div class="tab-content tab-content-basic pt-0">
                        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                            <div class="row">
                                <div class="col-lg-12 d-flex flex-column">
                                    <div class="row flex-grow">
                                        <div class="col-12 grid-margin stretch-card">
                                            <div class="card card-rounded" @* style="margin-top: 70px;" *@>
                                                <div class="card-body">

                                                    <input type="hidden" id="flgmode" value="Add" />
                                                    <input type="hidden" id="txtHiddenId" value="0" />
                                                    <input type="hidden" id="Hid_BeatId" value="0" />
                                                    <input type="hidden" id="HIdTYpe" value="@ViewBag.Type" />

                                                    <div class="d-flex">
                                                      
                                                                 <a class="btn btn-success"  href="~/Admin/Dashboard">
                                                                    <i class="fa-solid fa-house-user text-white"></i>
                                                                </a>
                                                        <p class="m-auto fa-2x " style="font-weight:bold">@(ViewBag.Type == "Mapping" ? "User" : ViewBag.Type == "Dashboard"?"Reports":"Master")</p>
                                                           
                                                         
                                                        
                                                    </div>
                                                    <br>
                                                  

                                                    <div class="dashboard">
                                                                   
                                                 

                                                    </div>


                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

   

