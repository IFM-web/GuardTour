@{
    ViewData["Title"] = "Company Master";
    Layout = "~/Views/Shared/_LayoutDashboard1.cshtml";
}


<div class="main-panel main-panel-one" style="width:100% !important">
    <div class="content-wrapper pt-0">
        <div class="row">
            <div class="col-sm-12">
                <div class="home-tab">
                    <div class="tab-content tab-content-basic pt-0">
                        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                            <div class="row">
                                <div class="col-lg-12 d-flex flex-column">
                                    <div class="row flex-grow">
                                        <div class="col-12 grid-margin stretch-card">
                                            <div class="card card-rounded">
                                                <div class="card-body">

                                                    <input type="hidden" id="flgmode" value="Add" />
                                                    <input type="hidden" id="txtHiddenId" value="0" />
                                                    <div class="d-sm-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h4 class="card-title card-title-dash">
                                                                <a href="#">
                                                                    Company Master
                                                                </a>
                                                            </h4>
                                                            <a href="~/Admin/BranchLogin" class="btn btn-success">
                                                                Back
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <br>
                                                    <div id="hidshowhead" class="row">

                                                       
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label>Company Code</label>
                                                                <input type="text" id="Companycode" oninput="validateInput(this)" name="Company Code" class="form-control mandatory" />
                                                      
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label>Company Name</label>
                                                                    <input type="text" id="Companyname" name="Company Name" class="form-control mandatory" />

                                                                </div>
                                                            </div>


                                                            <div class="col-md-1" style="    margin-top: 37px;">
                                                                <div class="form-group">
                                                                    <label>Status</label>
                                                                    <input type="checkbox" id="status" checked aria-label="Checkbox for following text input">

                                                                </div>
                                                            </div>
                                                            <div class="col-md-3" style="    margin-top: 37px;">
                                                                <button onclick="SAVEall()" id="submitbtn" class="btn btn-success">
                                                                    Save
                                                            </button>               <button class="btn btn-success" onclick="window.location.reload();">View List</button>
                                                            </div>
                                                        </div>
                                                   
                                                    <div class="row" id="griddiv">
                                                        <div>
                                                            <button class="btn btn-success float-end" id="addbutton"  onclick="Hidegrid()">Add New</button>
                                              
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="table-data">
                                                                <div id="printdiv"></div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<script src="~/js/Admin/Company.js"></script>
<script src="~/js/InsAjax.js"></script>
<script src="~/js/Master.js"></script>

