                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <!-- Monthly Distance Covered Pie Chart -->
                    <div class="monthly-chart">
                        <h2>Monthly Distance Covered (@(Math.Round(ViewBag.TatalofMonth,2)) km)</h2>
                        <div class="chart-container">
                            <canvas id="monthlyPieChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('monthlyPieChart').getContext('2d');
        let totals = @Html.Raw(
            System.Text.Json.JsonSerializer.Serialize(ViewBag.totalsmonthly)
        )


        let labelsname = Object.keys(totals);
        let values = Object.values(totals).map(v => Math.round(v, 2));
        console.log("test ", totals);
        const data = {
            labels: labelsname,
            datasets: [{
                label: 'Distance Covered (km)',
                data: values,
                backgroundColor: [
                    '#4a90e2',
                    '#50e3c2',
                    '#f5a623'
                ],
                borderWidth: 1,
                borderColor: '#fff',
                hoverOffset: 25
            }]
        };

        const config = {
            type: 'pie',
            data: data,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: { size: 14 },
                            color: '#333'
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: ctx => `${ctx.label}: ${ctx.parsed} km`
                        }
                    }
                }
            }
        };

        new Chart(ctx, config);
    </script>


