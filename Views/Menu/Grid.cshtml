
@{
    ViewData["Title"] = "Grid";
}





@{
    @using Microsoft.AspNetCore.Http;

    @inject IHttpContextAccessor HttpContextAccessor;
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<style>

    #massaage li {
        color: red;
    }

    select.form-control {
        background: white;
        outline: 1px solid #dee2e6;
    }
</style>



<!-- partial -->
<div class="main-panel main-panel-one" style="width:100% !important">
    <div class="content-wrapper pt-0">
        <div class="row">
            <div class="col-sm-12">
                <div class="home-tab">
                    <div class="tab-content tab-content-basic pt-0">
                        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                            <div class="row">
                                <div class="col-lg-12 d-flex flex-column">
                                    <div class="row flex-grow">
                                        <div class="col-12 grid-margin stretch-card">
                                            <div class="card card-rounded">
                                                <div class="card-body">

                                                    <input type="hidden" id="flgmode" value="Add" />
                                                    <input type="hidden" id="txtHiddenId" value="0" />
                                                    <div class="d-sm-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h4 class="card-title card-title-dash">
                                                                <a href="#">
                                                                  Grid
                                                                </a>
                                                            </h4>
                                                            <a href="~/Admin/DashboardLogin?id=@HttpContextAccessor.HttpContext.Session.GetString("MainUrl")" class="btn btn-success">
                                                                Back
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <br>
                                                    <div class="row" id="hidshowhead">
                                                        <div id="massaage"></div>
                                                        <input type="hidden" name="name" id="txtHiddenId" value="0" />
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Title Name</label>
                                                                <input type="text" class="form-control" name="Title Name" id="titleName" />
                                                                

                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Url Link</label>
                                                                <input type="text" class="form-control" name="Url Link" id="UrlLink" />


                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Icon Class</label>
                                                                <input type="text" class="form-control" name="Icon Class " id="iconclass" />


                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Count Id</label>
                                                                <input type="text" class="form-control" name="Count Id" id="Countid" />


                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Print Order</label>
                                                                <input type="text" class="form-control" name="Print Order" id="PrintOrder" />


                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Category</label>
                                                                <select id="Category" name="Category" class="form-control">
                                                                   <option value="Master">Master</option>
                                                                    <option value="Mapping">Users</option>
                                                                    <option value="DashBoard">Dashboard</option>
                                                               </select>


                                                            </div>
                                                        </div>
                                                                                                                                                             <div class="col-md-1" style="    margin-top: 37px;">
                                                            <div class="form-group">
                                                                <label>Status</label>
                                                                <input type="checkbox" id="status" checked aria-label="Checkbox for following text input">

                                                            </div>
                                                        </div>
                                                        <div class="col-md-3" style="    margin-top: 37px;">
                                                            <button onclick="Save()"  class="btn btn-success">
                                                                Save
                                                            </button>
                                                            <button class="btn btn-success" onclick="window.location.reload();">View List</button>



                                                        </div>
                                                    </div> <div class="row" id="griddiv">
                                                        <div class="d-flex justify-content-between">
                                                            <input type="text" id="filterInput" style="height: 2.0rem !important" class="form-control typcn-input-checked-outline py-0 w-25" placeholder="Search here" />
                                                            <button class="btn btn-success float-end" id="addbutton" onclick="Hidegrid()">Add New</button>

                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="table-data">
                                                                <div id="printdiv"></div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- main-panel ends -->

<script src="~/js/Menu/Grid.js" asp-append-version="true"></script>
<script src="~/js/InsAjax.js" asp-append-version="true"></script>
<script src="~/js/Master.js" asp-append-version="true"></script>









