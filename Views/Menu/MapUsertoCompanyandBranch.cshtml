
@{
    ViewData["Title"] = "MapUser to Company and Branch";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<style>

    #massaage li {
        color: red;
    }
</style>


<!-- partial -->
<div class="main-panel main-panel-one" style="width:100% !important">
    <div class="content-wrapper pt-0">
        <div class="row">
            <div class="col-sm-12">
                <div class="home-tab">
                    <div class="tab-content tab-content-basic pt-0">
                        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                            <div class="row">
                                <div class="col-lg-12 d-flex flex-column">
                                    <div class="row flex-grow">
                                        <div class="col-12 grid-margin stretch-card">
                                            <div class="card card-rounded">
                                                <div class="card-body">

                                                    <input type="hidden" id="flgmode" value="Add" />
                                                    <input type="hidden" id="txtHiddenId" value="0" />
                                                    <input type="hidden" id="UserIdd" value="@ViewBag.UserId" />
                                                    <div class="d-sm-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h4 class="card-title card-title-dash">
                                                                <a href="#">
                                                                    User Map to Company & Branch
                                                                </a>
                                                            </h4>
                                                            <a href="~/Profile/UserCreation" class="btn btn-success">
                                                                Back
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <br>
                                                    <div class="row" id="hidshowhead">
                                                        <div id="massaage"></div>
                                                        <input type="hidden" name="name" id="txtHiddenId" value="0" />
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Company</label>
                                                                <select  class="form-control mandatory" id="Company" style="border: 1px solid lightgray;" name="Company" onchange="bindBranch(this.value)">
                                                                    <option value="0">Select</option>
                                                                    @if (ViewBag.Company != null)
                                                                    {
                                                                        foreach (var item in ViewBag.Company as List<SelectListItem>)
                                                                        {
                                                                            <option value="@item.Value">@item.Text</option>
                                                                        }
                                                                    }
                                                                </select>

                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group">                           
                                                                    <label for="branch" class="form-label">Branch</label>
                                                                <select class="form-control mandatory" style="border: 1px solid lightgray;" name="Branch" id="branch" onchange="bindCustomer()">
                                                                        <option value="0">Select </option> 
                                                                    </select>
                                                                </div>

                                                           
                                                        </div>

                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label for="Customer" class="form-label">Customer</label>
                                                                <select class="form-control" style="border: 1px solid lightgray;" name="Customer" id="Customer">
                                                                    <option value="0"> All </option>
                                                                </select>
                                                            </div>


                                                        </div>


                                                        <div class="col-md-1" style="    margin-top: 37px;">
                                                            <div class="form-group">
                                                                <label>Status</label>
                                                                <input type="checkbox" id="status" checked aria-label="Checkbox for following text input">

                                                            </div>
                                                        </div>
                                                        <div class="col-md-3" style="    margin-top: 37px;">
                                                            <button onclick="SaveAll()" id="submitbtn" class="btn btn-success">
                                                                Save
                                                            </button>




                                                        </div>
                                                    </div> <div class="row" id="griddiv">
                                                        <div class="d-flex justify-content-between">
                                                            <input type="text" id="filterInput" style="height: 2.0rem !important" class="form-control typcn-input-checked-outline py-0 w-25" placeholder="Search here" />


                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="table-data">
                                                                <div id="UserPRint"></div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- main-panel ends -->

<script src="~/js/Menu/UsermapToComAndBr.js" asp-append-version="true"></script>
<script src="~/js/InsAjax.js" asp-append-version="true"></script>
<script src="~/js/Master.js" asp-append-version="true"></script>







