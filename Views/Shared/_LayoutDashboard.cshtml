<script>
    // Get the elements
    const branchLoginLink = document.getElementById("branch-login-link");
    const branchInfo = document.getElementById("branch-info");

    // Add event listener to the "Branch Login" link
    branchLoginLink.addEventListener("click", function (event) {
        event.preventDefault(); // Prevent default action (e.g., following the link)

        // Toggle the 'show' class to trigger animation
        branchInfo.classList.toggle("show");

        // If you want to make it hide again after clicking, you can use the following:
        if (!branchInfo.classList.contains("show")) {
            setTimeout(function () {
                branchInfo.style.display = 'none'; // Hide after animation
            }, 500); // Match the transition time (500ms)
        } else {
            branchInfo.style.display = 'block'; // Show the div when "show" class is added
        }
    });

    var FlagAdd = document.getElementById("FlagAdd");
   
    if (FlagAdd.value == 0){
        $("#addbutton ,#setrul").remove();
    }
  
</script>