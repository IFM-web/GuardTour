    <script type="text/javascript">
        jQuery(function ($) {
            var path = window.location.pathname; // Get the current path

            // Remove 'active' class from all links first
            $('.sub-menu.nav-link, .border-nav.nav-link').removeClass('active');

            // Add 'active' class only to the link with an exact href match
            $('.sub-menu.nav-link, .border-nav.nav-link').each(function () {
                if ($(this).attr('href').toLowerCase() === path.toLowerCase()) {
                    $(this).toggleClass('active');
                }
            });
        });
    
